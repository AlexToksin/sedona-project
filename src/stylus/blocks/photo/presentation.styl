.presentation{
  display flex
  flex-direction column
  align-items center
  border-top 1px solid #e4e4e4
  width 100%
  &__wrapper{
    margin 40px
  }
  & .title{
    text-align center
  }
  & .text{
    width: 237px;
    text-align: center;
    margin-top 30px
  }
}

@media (min-width: 768px) {
  .presentation {
    border-top none
    & .text {
      width 415px
      }
      & .title {
        font-size 30px
      }
    }
  }
