.foto-video{
  &__list{

  }
  &__head{
    display flex
    flex-direction column
    align-items center
    padding 25px
  }
  & .title{
    font-size 18px
    font-weight 700
  }
  & .text{
    font-size 14px
    text-align center
  }
  & .title{
    margin 44px
  }
  &__item{
    padding 20px
    border-top 1px solid #e4e4e4
  }
  &__title{
    text-transform uppercase
    font-weight:700
    font-size 14px
    margin 22px 0 10px 0
  }
  &__text{
    font-size 14px

  }
}


@media (min-width: 768px) {
  .foto-video{
    &__list{
      display flex
      flex-direction row
      flex-wrap: wrap
      padding 60px
    }
    &__item{
      display flex
      flex-direction column
      padding 0
      border-top none
      width 50%
      &_big{
        width 100%
      }
      &-wrapper{
        display flex
        justify-content space-between
        padding 20px
        background-color #f2f2f2
      }
    }
    &__title{
      margin 0px
      margin-bottom 10px
    }
    & .title{
      font-size 30px
    }
  }

}

@media (min-width: 1024px) {
    .foto-video{
      &__list{
        color #fff
        padding 0px
      }
      &__item{
        position relative
        width 33.333333333%
        &-wrapper{
          position: absolute;
          bottom: 0;
          width: 100%;
          background-color rgba(0,0,0,0.3)
        }
        &_big{
          width 100%
          height 400px
        }
      }
    }

}
