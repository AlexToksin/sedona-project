.sedona-foto{
  display flex
  position relative
  flex-direction column
  margin-top -35px
  background-image url("./../assets/sedona-foto/bg-back-mobile@1x.jpg")
  background-repeat no-repeat
  background-position center
  background-size cover
  width 100%
  min-height 389px
  &_small{
    min-height 190px
  }
  &__text{
    display: flex;
    margin: auto;
    width 290px
  }
  &__triggle{
    position absolute
    bottom -1px
  }
}
picture{
  width: -webkit-fill-available;
}


@media (min-width: 768px) {
    .sedona-foto{
      background-position center
      background-image url("./../assets/sedona-foto/bg-back-mobile@2x.jpg")
      &__wrapper-case{
        display flex
      }
    }

}

@media (min-width: 1024px) {
  .sedona-foto{
    background-image url("./../assets/sedona-foto/bg-back-desktop@1x.jpg")
  }

}
