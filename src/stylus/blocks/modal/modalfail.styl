.modal-mask {
  position: fixed;
  z-index: 9998;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  display: flex;
  justify-content center
  align-items center
  transition: opacity .3s ease;
}
.activeModal{
  display none
}
.modal-wrapper {
  display: table-cell;
  vertical-align: middle;
  align center
}


.modal{
  width 100%
  height 367px
  display flex
  flex-direction column
  &__head{
    width 100%
    height 60%
    display: flex;
    flex-direction: column;
    padding: 50px;
    justify-content: center;
    align-items: center;
    background-color #fff
    & .text{
      margin-top 20px
      text-align center
    }
  }
  & .btn{
    margin 10px
  }
}
.btn-wrapper{
  width 100%
  background-color #f2f2f2
  display: flex;
  justify-content: center;
  align-items: center;
}

@media (min-width: 768px){
  .modal{
    width 490px
  }
}
