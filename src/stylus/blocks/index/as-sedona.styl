.as-sedona{
  &__title-wraper{
    display flex
    flex-direction column
    text-align center
    width 255px
    margin: auto;
    margin-top: 30px;
    margin-bottom: 60px;
    & .title{
      margin-bottom 50px
    }
  }
  &__item{
    display flex
    flex-direction column
    text-align center
    &_mod{
      display flex
      padding 20px
    }
  }
  &__hidden{
    //display none

  }
  &__visible{
    background-color #eeeeee
    border-bottom 1px solid rgba(1,1,1,0.1)
    padding 60px 0 30px 0
  }
  &__visible, &__visible:hover{
    padding 10vw
    display flex
    flex-direction column
    justify-content center
    align-items center
  }
  &__visible:hover{
    background-color #81b3d2
    color #fff
    .text_color, .title_color{
      color #fff
    }
  }
  .ico{
    width 40px
  }
  &__wrapper-item{
    display flex
  }
  & .title_modify{
    display flex
    align-self center
    margin-left 10px
  }
  & .text_modify{
    display: flex
    width 210px;
    margin-left 50px
    text-align left
  }

}
.as-sedona__list-wrapper{
  padding 21px 20px 40px 20px
  display: flex;
  flex-direction: column;
  align-items: center;
}

.as-sedona__count{
  margin: 20px 0 20px 0;
}


@media (min-width: 768px) {
  .title{
    font-size 21px
  }
  .as-sedona{
    &__title-wraper{
      width 486px
      margin-top 50px
      margin-bottom 55px
    }
    &__list-wrapper {
      display flex
    }
    &__list-wrapper &__item{
      width 33%
    }
    &__foto-item{
      display flex
      width 67%
      height 256px
    }
    &__wrapper-case{
      width 33%
      display flex
    }
    &__visible, &__visible:hover{
      width 100%
      height 256px
      padding 48px
    }
    &__item{
      flex-direction: row;
      flex-wrap: wrap;
      justify-content center
      &_close{
        width 33.3333333333333333333333%
      }


    }
    &__list{
      display flex
      flex-wrap wrap
      &-wrapper{
        max-width 1200px
        flex-direction row
        width 100vw
        padding 60px 50px 60px 50px
        justify-content: space-between;
        height 256px
      }
      &-item{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }
    }
    .ico{
      &_home{
        width 75px
        height 72px
      }
      &_gifts{
        width 64px
        height 75px
      }
      &_burger{
        width 78px
        height 68px
      }
    }
    &__wrapper-item{
      flex-direction column
      align-items center
    }
    .text_modify{
      text-align center
      margin 0
      width 170px
    }
    .title_modify{
      margin 30px
    }
    &__list &__list-item:nth-child(1) {
      order 1
    }
    &__list &__list-item:nth-child(2) {
      order 3
    }
    &__list &__list-item:nth-child(3) {
      order 2
    }
    &__title-wraper .text{
      margin-top 50px
    }
  }
  .foto{
    height:100%
  }
}

