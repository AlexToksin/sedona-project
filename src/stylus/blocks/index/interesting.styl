.interisting{
  display flex
  flex-direction column
  justify-content space-around
  align-items center
  padding 20px
  text-align center
}
.title_interisting, .text_interisting{
  margin-bottom 3vh
}

  @media (min-width: 768px){
    .interisting{
      padding 0
      &__wrapper{
        width 434px
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top 57px
        margin-bottom 57px
      }
    }
    .title_interisting{
      font-size 30px
      margin 0
    }
    .text_interisting{
      width: 396px;
      line-height 24px
      margin-top 40px
      margin-bottom 50px
    }
  }
