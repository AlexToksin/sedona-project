  .main-nav {

    &__list {
      padding 0;
      margin 0;
      display flex
      flex-direction column

    }
    &__item {
      display flex
      justify-content center
      background-color #81b3d2;
      padding 10px
      margin-bottom 1px
      box-shadow: 0 1px 0 rgba(1, 1, 1, 0.5);
      &_mod {
        background-color #fff
        padding 0px
        box-shadow none
        order: 6
      }
    }
    &__toggle {
      border-top: 8px solid #000;
      border-bottom: 8px solid #000;
      width: 10vw;
      height: 10vh;
      cursor: pointer;
      position: relative;
      margin: 10px auto 0;
      &:before {
        content: '';
        display: inline-block;
        position: absolute;
        top: 50%;
        left: 0px;
        width: 100%;
        border-top: 8px solid #000;
        margin-top: 10 / 2px;
      }
    }
  }

@media (min-width: 720px){
  .main-nav{
    display flex
    flex-direction row
    width 100%
    &__list{
      display flex
      flex-direction row
      width 100%
      justify-content none
    }
    &__item{
      display flex
      align-items center
      background-color #fff;
      box-shadow: none
      width 20%
      height 80%
      margin 0
      margin-right 4vw
      padding 0
      &_mod{
        display flex
        height 100%
        order: 3
      }
    }
    &__toggle{
      display none
    }
    &__logo{
      display flex
    }
    &__logo{
      z-index 2
    }
  }
  .title{
    font-size 14px
    color #000
  }
}
